package practicaCompra.userInterfaces;

import org.openqa.selenium.By;

import net.serenitybdd.core.pages.PageObject;
import net.serenitybdd.screenplay.targets.Target;

public class PaginaSummaryShoppingPage extends PageObject{
	
	public static final Target BTN_PROCEED_CHECKOUT= Target.the("checkout botton thow").locatedBy("//a[@class='button btn btn-default standard-checkout button-medium']//span[contains(text(),'Proceed to checkout')]");
	public static final Target BTN_PROCEED_CHECKOUT_ADDRESSES= Target.the("checkout botton addresses").locatedBy("//button[@name='processAddress']//span[contains(text(),'Proceed to checkout')]");

	public static final Target CHECK_TERMS= Target.the("checkout terms").located(By.id("cgv"));
	public static final Target BTN_PROCEED_SHIPPING_= Target.the("checkout botton shipping").locatedBy("//button[@name='processCarrier']//span[contains(text(),'Proceed to checkout')]");

	public static final Target BTN_PAY_BY_CHECK= Target.the("pay by check botton").locatedBy("//a[@class='cheque']");

	public static final Target BTN_CONFIRM_ORDER= Target.the("pay by check botton").locatedBy("//span[contains(text(),'I confirm my order')]");

	
}
